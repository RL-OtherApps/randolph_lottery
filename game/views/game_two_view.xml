<odoo>
    <template id="game_two" name="Game Two">
        <t t-name="website.game_two">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure"
                     style="background:#000000;padding:0px;margin:0px;background-image:url(/game/static/src/images/background.jpg);height:100%;">
                    <div id="chart"></div>
                    <div id="question">
                        <form action="get_result_game_two" method="post">
                            <input type="hidden" name="csrf_token"
                                   t-att-value="request.csrf_token()"/>

                            <input type="text" class="game_id" name="game_id"
                                   t-att-value="game.id" style="visibility:hidden;"/>
                            <br/>

                            <input type="text" id="number_input" name="number_input"
                                   t-att-value="game.input" style="visibility:hidden;"/>
                            <br/>
                            <div class="col-lg-4"
                                 style="left:50%;top:30%;position: fixed;background-color: darkseagreen;border: 1px solid;box-shadow: 5px 10px;">
                                <br/>
                                <center>
                                    <h4>
                                        <b>Your Input :</b>
                                        <span t-esc="game.input"/>
                                    </h4>
                                </center>
                                <br/>
                                <center>
                                    <h4>
                                        <b>Your Output :</b>
                                        <input type="text" name="result_number" id="result_number" style="width: 20%;border: aliceblue;color: green;font-size: 25px;background-color:black;" readonly="true"/>
                                    </h4>
                                </center>
                                <br/>
                                <center>
                                    <input type="text" name="result" id="result" readonly="true"
                                           style="width: 100%;border: aliceblue;color: green;font-size: 25px;background-color:black;"/>
                                </center>
                                <br/>
                                <br/>

                                <center>
                                    <button type="submit"
                                            style="background-color:#101820FF;color:#F2AA4CFF;border-color:#101820FF;box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);">
                                        Submit
                                    </button>
                                </center>
                                <br/>
                                Click on submit to save your result and claim your amount if you won.
                                <br/>
                            </div>
                        </form>
                    </div>
                    <script src="https://d3js.org/d3.v3.min.js" charset="utf-8"></script>
                    <script type="text/javascript" src="/game/static/src/js/game2.js"/>
                </div>
            </t>
        </t>
    </template>

    <template id="game_two_form" name="Game Two Form">
        <t t-name="website.game_two">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure"
                     style="background-image:url(/game/static/src/images/background.jpg);height:100%;">
                    <form action="open_game" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div style="left:50%;top:30%;position: fixed;background-color: darkseagreen;border: 1px solid;box-shadow: 5px 10px;">
                            <br/>
                            <center>
                                <strong>Enter the number from 1-10</strong>
                            </center>
                            <br/>
                            <center>
                                <input type="text" name="input_number" id="input_number"
                                       onChange="return numberValidation()"
                                       style="width: 50%;border: aliceblue;color: green;font-size: 25px;background-color:black;"/>
                            </center>
                            <script>
                                function numberValidation()
                                {
                                number = document.getElementById('input_number').value;
                                if (number>10){
                                alert("Please enter numbers between 1-10")
                                return false
                                } else {
                                return true;
                                }
                                }
                            </script>
                            <br/>
                            <br/>
                            <center>
                                <button type="submit"
                                        style="background-color:#101820FF;color:#F2AA4CFF;border-color:#101820FF;box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);">
                                    Submit
                                </button>
                            </center>
                            <br/>
                            <br/>
                        </div>

                    </form>
                </div>
            </t>
        </t>
    </template>

    <template id="assets_frontend" name="game assets" inherit_id="web.assets_frontend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/game/static/src/scss/style2.scss"/>
        </xpath>
    </template>
</odoo>